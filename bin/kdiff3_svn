#!/bin/sh

# echo "kdiff3_svn" "$@"

if [ "$#" -ge 11 ]; then
  outfile=`mktemp`
  res=0
  # kdiff3 --L1 "$4" --L2 "$6" --L3 "$8" -out "${outfile}" "$9" "${10}" "${11}" && cat "${outfile}" || res=1
  kdiff3 -o "${outfile}" "${10}" "${11}" "$9" && cat "${outfile}" || res=1
  if [ -f "${outfile}" ]; then
    rm -f "${outfile}"
  fi
  if [ -f "${outfile}.orig" ]; then
    rm -f "${outfile}.orig"
    fi
    exit $res
fi
if [ "$#" -gt 3 ]; then
  exec kdiff3 -o "$4" "$1" "$2" "$3"
fi
if [ "$#" -eq 3 ]; then
  exec kdiff3 "$1" "$2" "$3"
fi
